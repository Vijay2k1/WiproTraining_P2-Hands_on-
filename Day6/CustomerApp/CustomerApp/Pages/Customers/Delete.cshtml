@page
@model CustomerApp.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}

 <h2>Are you sure you want to delete this customer?</h2>

<form method="post">
    <input type="hidden" asp-for="Customer.CustomerID" />

    <p><strong>Name:</strong> @Model.Customer.Name</p>
    <p><strong>Address:</strong> @Model.Customer.Address</p>
    <p><strong>Country:</strong> @Model.Customer.Country</p>
    <p><strong>City:</strong> @Model.Customer.City</p>
    <p><strong>Phone No:</strong> @Model.Customer.Phoneno</p>

    <button type="submit">Delete</button>
    <a asp-page="Index">Cancel</a>
</form>
 